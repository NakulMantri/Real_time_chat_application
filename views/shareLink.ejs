<%- include('layouts/header.ejs') %>


<div class="container">



<div>

<img src="/<%= group.image %>" alt="" width="200px" height="200px">
<p><b><%= group.name%> </b></p>
<p><b>Total Members : </b><%= totalMembers %></p>



<%
if(availble!=0){
     %>
<p>Available for <b><%= availble %></b> Members only  </p>
     <%
}



if(isOwner){
    %>
<p>You are the creator of this group, you can't join</p>

    <%
}

else if(isJoined > 0){
    %>
<p>You already joined this group</p> 

    <%
}


else if(availble == 0){
    %>
<p>Group already filled</p> 

    <%
}


else{
    %>
   <button class="btn btn-primary join-now" data-id="<%=group._id %>">Join Now</button>
        <%
}



%>

</div>



</div>

